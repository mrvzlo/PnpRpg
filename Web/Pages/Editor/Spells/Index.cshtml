@page
@model Pnprpg.WebCore.Pages.Editor.Spells.IndexModel
@{
    ViewData["Title"] = "Редактор заклинаний";
}

<div class="col-12 mb-3">
    <a class="btn btn-success" asp-page="@SitePages.EditorSpellsEdit">Добавить новое</a>
</div>

<div class="row justify-content-center">
    <div class="col-4 my-2">
        <a asp-page="@SitePages.EditorSpellsIndex" class="d-block border-colourful border-dark text-decoration-none py-1">
            Все
        </a>
    </div>
    @foreach (var school in Model.Schools)
    {
        <div class="col-4 my-2">
            <a asp-page="@SitePages.EditorSpellsIndex" asp-route-id="@school.Id"
               class="d-block border-colourful text-decoration-none py-1" style="--color: #@school.Color">
                @school.Name
            </a>
        </div>
    }
</div>

<div class="mvc-grid" data-source-url="@Url.Page(SitePages.EditorSpellsIndex, "Grid", new{filter = Model.Filtered})"></div>

<form asp-page-handler="Delete" id="deleteForm">
    @Html.Hidden("ModelId")
</form>