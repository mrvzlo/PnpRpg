@page
@model SignInModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="col-md-8 col-12 col-lg-6 px-4">
    <div class="d-sm-flex d-block btn-group justify-content-center text-center my-3">
        <div class="col-sm-6 col-12 btn btn-outline-primary active">
            Войти
        </div>
        <a class="col-sm-6 col-12 btn btn-outline-primary" asp-page="@SitePages.AccountSignUp">
            Зарегистрироваться
        </a>
    </div>
    <div>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="text-danger col-12">@Html.ValidationSummary(true)</div>
            </div>
            <div class="row">
                @Html.LabelFor(x => x.Login.Username, new { @class = "col-sm-3 col-md-4 col-form-label" })
                @Html.TextBoxFor(x => x.Login.Username, new { @class = "col form-control" })
                <div class="text-danger col-12">@Html.ValidationMessageFor(x => x.Login.Username)</div>
            </div>
            <div class="row">
                @Html.LabelFor(x => x.Login.Password, new { @class = "col-sm-3 col-md-4 col-form-label" })
                @Html.PasswordFor(x => x.Login.Password, new { @class = "col form-control" })
                <div class="text-danger col-12">@Html.ValidationMessageFor(x => x.Login.Password)</div>
            </div>
            @Html.HiddenFor(x => x.Login.ReturnUrl)
            <button type="submit" class="btn btn-primary py-2 mt-3">Войти</button>
        </form>
    </div>
</div>