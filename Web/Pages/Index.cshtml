@page
@model IndexModel
@using System.Globalization
@using Pnprpg.DomainService.Enums
@using Pnprpg.WebCore.Pages.Home
@{
    ViewData["HideTitle"] = true;
    ViewData["Title"] = $"Table Adventures Generation System {Model.Version}";
}

<div class="display-6 m-3 my-5">Table Adventures Generation System @Model.Version</div>
@{
    await Html.RenderPartialAsync("Home/Card",
        new CardModel {Icon = "mask", Url = SitePages.HeroGenIndex, Name = "Создать персонажа"});
    await Html.RenderPartialAsync("Home/Card",
        new CardModel {Icon = "book", Url = Url.Action("Index", "Book"), Name = "Книга игрока" });
    await Html.RenderPartialAsync("Home/Card",
        new CardModel {Icon = "id-card", Url = Url.Action("HeroSheets", "Book"), Name = "Листы персонажа" });
}

<div class="my-3"></div>

@{
    await Html.RenderPartialAsync(SitePages.News_Details, Model.LatestNews);
}

<div class="py-3">
    <a asp-page="@SitePages.NewsIndex" class="link-info">К другим новостям</a>
</div>