@using Pnprpg.DomainService.Models;
@using Pnprpg.WebCore.Helpers
@model FormQueryItem

<div class="col-md-6 mx-auto">
    <div class="input-group pt-3 closeable">
        @Html.Hidden("Input.Bonuses.Index", Model.Position, new { @class = "index" })
        @Html.DropDownList($"Input.Bonuses[{Model.Position}]", SelectableHelper.GetSelectList(Model), null, new { @class = "form-select", id = "" })
        <button class="btn btn-danger clear-btn" type="button">
            X
        </button>
    </div>
</div>