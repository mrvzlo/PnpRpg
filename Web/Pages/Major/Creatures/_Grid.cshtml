@using Microsoft.AspNetCore.Html
@using NonFactors.Mvc.Grid
@using Pnprpg.DomainService.Models
@using Pnprpg.WebCore.Helpers
@model IQueryable<Pnprpg.DomainService.Models.CreatureViewModel>
@(Html.Grid(Model).Build(columns =>
{
    columns.Add(x => x).RenderedAs(Render).Titled("");
}).Css("table table-specific").Pageable(pager => { pager.RowsPerPage = 5; })
    .Empty("Пока никого не поймали"))

@{
    IHtmlContent Render(CreatureViewModel x) => PartialHelper.Body(
        @<text>@{await Html.RenderPartialAsync("Creatures/_Details", x);}</text>
        );
}