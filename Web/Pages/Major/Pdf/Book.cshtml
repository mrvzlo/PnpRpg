@page
@using Pnprpg.WebCore.Pages.Shared.Pdf
@model BookModel
@{
    Layout = "_LayoutIntro";
    var pageModel = (BookModel)ViewBag.Model;
}
<link rel="stylesheet" href="@pageModel.RootPath/css/book.css" />
<style>
    @if (pageModel.IsLocal)
    {
        @:body {font-family: 'Roboto Slab', serif;} .h, h1, h2, h3, h4, h5, h6 {font-family: 'Balsamiq Sans';}
    }
</style>
@{
    await Html.RenderPartialAsync("Pdf/BookParts/TitlePages");
    await Html.RenderPartialAsync("Pdf/BookParts/RacePages", pageModel.Races);
    await Html.RenderPartialAsync("Pdf/BookParts/BranchPages", pageModel.Branches);
    await Html.RenderPartialAsync("Pdf/BookParts/Abilities", pageModel.Abilities);
    await Html.RenderPartialAsync("Pdf/BookParts/Traits", pageModel.Traits);
    await Html.RenderPartialAsync("Pdf/BookParts/Skills", pageModel.Skills);
    await Html.RenderPartialAsync("Pdf/BookParts/MagicPages", pageModel.MagicSchools);
    await Html.RenderPartialAsync("Pdf/BookParts/Alchemy", pageModel.Alchemy);
    await Html.RenderPartialAsync("Pdf/BookParts/FightPages");
}