@using Boot.Enums
@using Boot.Helpers
@using Boot.Models.JsonModels
@model List<MagicSchoolGroup>
@{
    var count = EnumExtensions.GetEnumCount(typeof(StatType));
    ViewBag.Title = "Школы магии";
}
<div class="nav nav-tabs col-12 mt-md-2">
    @for (var i = 0; i < count; i++)
    {
        var a = (StatType)i;
        <a class="btn btn-@a.Color() mx-1" data-toggle="tab" href="#@a.Description()">
            <span class="d-inline d-sm-none">@a</span>
            <span class="d-none d-sm-inline">@a.Translation()</span>
        </a>
    }
</div>
<div class="tab-content col-12">
    @foreach (var group in Model)
    {
        <div class="tab-pane fade" id="@group.Stat.Description()">
            <div class="row justify-content-around">
                <div class="col-12 text-center m-2">@group.Special</div>
                <div class="nav nav-tabs col-12 flex-column flex-sm-row p-0">
                    @foreach (var school in group.Schools)
                    {
                        <a class="btn btn-@group.Stat.Color() mx-1 smallForSmall d-sm-block @(school.Id == 0 ? "active" : "")"
                           data-toggle="tab" href="#@group.Stat.ToString()@school.Id">@school.Name</a>
                        <br />
                    }
                </div>
                <div class="tab-content col-12 text-left smallForSmall">
                    @foreach (var school in group.Schools)
                    {
                        <div class="tab-pane fade @(school.Id % 10 == 0 ? "show active":"")" id="@group.Stat.ToString()@school.Id">
                            <p>@Html.Raw(school.Desc)</p>
                            <p>@Html.Raw(school.Novice)</p>
                            <p>@Html.Raw(school.Adept)</p>
                            <p>@Html.Raw(school.Master)</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>