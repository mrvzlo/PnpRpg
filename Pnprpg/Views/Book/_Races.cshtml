@model IQueryable<Pnprpg.DomainService.Models.RaceViewModel>
<h5>Расы</h5>
<p>
    Каждый персонаж по умолчанию является человеком, но может выбрать любую из @Model.Count() рас, чтобы получить их преимущества и недостатки.
</p>
<table class="table-bordered">
    <tr>
        <th>Название</th>
        <th>Плюсы</th>
        <th>Минусы</th>
    </tr>
    @foreach (var race in Model)
    {
        <tr>
            <td>@race.Name</td>
            @if (race.Effects?.Any() ?? false)
            {
                <td>
                    @foreach (var effect in race.Effects.Where(x => x.Value > 0))
                    {
                        @effect.ToString()
                    }
                </td>
                <td>
                    @foreach (var effect in race.Effects.Where(x => x.Value < 0))
                    {
                        @effect.ToString()
                    }
                </td>
            }
            else
            {
                <td colspan="2" class="text-center">Нет</td>
            }
        </tr>
    }
</table>