@model Pnprpg.DomainService.Models.HeroModel
@{
    Layout = "~/Views/Shared/_LayoutIntro.cshtml";
    var list = new[] { "Здоровье", "Мана", "Вместимость", "Запас сил", "Уровень", "Карма", "Урон", "Защита" };
}
<style>
    @{ Html.RenderAction("HeroSheetStyle");}
</style>

<table class="table">
    <tr>
        <td class="px-3" style="width: 25%"><div class="bb pl-3">Имя <span class="float-right pr-2">@(Model?.Name)</span></div></td>
        <td class="px-3" style="width: 20%"><div class="bb pl-3">Класс</div></td>
        <td class="px-3" style="width: 20%"><div class="bb pl-3">Раса <span class="right pr-2">@(Model?.Race?.Name)</span></div></td>
        <td class="px-3" style="width: 20%"><div class="bb pl-3">Игрок</div></td>
        <td class="px-3" style="width: 15%"><div class="bb pl-3">Уровень</div></td>
    </tr>
</table>

<div style="@Pos(1, 5, 8, 15)">
    @for (var i = 0; i < 4; i++)
    {
        <div class="text-center">
            <div class="">@Model.Abilities.List[i].Name</div>
            <div class="circle"></div>
        </div>
    }
</div>

<div style="@Pos(11, 5, 8, 15)">
    @for (var i = 0; i < 4; i++)
    {
        <div class="text-center">
            <div class="">@list[i]</div>
            <div class="circle"></div>
        </div>
    }
</div>

<div style="@Pos(21, 5, 8, 15)">
    @for (var i = 4; i < 8; i++)
    {
        <div class="text-center">
            <div class="">@list[i]</div>
            <div class="circle"></div>
        </div>
    }
</div>

<div style="@Pos(76, 5, 23, 15)">
    <div class="text-center">Эффекты</div>
    <div class="card" style="height: 100%"></div>
</div>
<div style="@Pos(76, 25, 23, 20)">
    <div class="text-center">Особенности</div>
    <div class="card" style="height: 100%"></div>
</div>
<div style="@Pos(51, 5, 23, 40)">
    <div class="text-center">Навыки</div>
    <div class="card" style="height: 100%"></div>
</div>
<div style="@Pos(1, 50, 23, 45)">
    <div class="text-center">Заклинания</div>
    <div class="card" style="height: 100%"></div>
</div>
<div style="@Pos(26, 50, 23, 45)">
    <div class="text-center">Способности</div>
    <div class="card" style="height: 100%"></div>
</div>
<div style="@Pos(51, 50, 48, 45)">
    <div class="text-center">Инвентарь</div>
    <div class="card" style="height: 100%"></div>
</div>

@helper Pos(int x, int y, int w, int h)
{
    var vMod = 9;
    @($"position: fixed; left: {x}%; top:{y * vMod}px; width: {w}%; height: {h * vMod}px")
}