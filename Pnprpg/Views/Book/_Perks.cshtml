 @model IQueryable<Pnprpg.DomainService.Models.PerkViewModel>

<h5>Способности</h5>
<table class="table table-bordered">
    <tr>
        <th>Уровень</th>
        <th class="w-20">Название</th>
        <th>Ранги</th>
        <th class="w-50">Описание</th>
    </tr>
    @foreach (var perk in Model)
    {
        <tr>
            <td class="text-center">@perk.Level</td>
            <td>@perk.Name</td>
            <td>@perk.Max</td>
            <td>@perk.Description</td>
        </tr>
    }
</table>