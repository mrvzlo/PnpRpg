@model Pnprpg.DomainService.Models.Perks.PerkEditModel

@{
    ViewBag.Title = Model.Id == 0 ? "Новая способность" : Model.Name;
}

@using (Html.BeginForm("EditPerk", "Editor", FormMethod.Post, new { @class = "col-12" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group row">
        <label class="col-md-2 col-3 col-form-label text-left">Уровень</label>
        <div class="col-md-3 col-9">
            @Html.TextBoxFor(x => x.Level, new { type = "number", @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-3 col-form-label text-left">Название</label>
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div> 
    </div>
    <div class="form-group row">
        <label class="col-md-2 col-3 col-form-label text-left">Эффект</label>
        <div class="col-md-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
    </div>

    <button type="button" class="btn btn-success ajax-btn" data-container="hr" data-style="prepend"
            data-url="@Url.Action("RequirementSelectModel","Editor")?position=" data-add="@(Model.Requirements?.Count ?? 0)">
        Добавить требование
    </button>
    if (Model.Requirements != null)
    {
        var i = 0;
        foreach (var req in Model.Requirements)
        {
            Html.RenderAction("ShowRequirementSelectModel", "Editor", new { pos = i++, value = req.Value, abilityId = req.AbilityId, reqType = req.Type });
        }
    }
    <hr id="hr"/>
    <button type="submit" class="btn btn-success">Сохранить</button>
}