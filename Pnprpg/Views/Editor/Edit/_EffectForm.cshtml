@using Pnprpg.DomainService.Enums
@model Pnprpg.DomainService.Models.EffectSelectModel

<div class="input-group mt-2 closeable">
    @Html.Hidden($"Effects[{Model.Position}].TargetType", Model.Target)
    @if (Model.Target == EffectTarget.Ability)
    {
        @Html.DropDownList($"Effects[{Model.Position}].TargetId", Model.List, null, new { @class = "form-control" })
        @Html.TextBox($"Effects[{Model.Position}].Value", Model.Value, null, new { type = "number", @class = "form-control" })
    }
    else
    {
        @Html.TextBox($"Effects[{Model.Position}].Description", new { @class = "form-control" })
    }
    <div class="input-group-append">
        <button class="btn btn-danger clear-btn" type="button">
            X
        </button>
    </div>
</div>