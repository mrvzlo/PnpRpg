@using Pnprpg.DomainService.Models
@model Pnprpg.DomainService.Models.PerkEditModel
@{
    ViewBag.Title = Model.Id == 0 ? "Новая способность" : Model.Name;
    var branches = (SelectableList) ViewBag.Branches;
}

@using (Html.BeginForm("EditPerk", "Editor", FormMethod.Post, new { @class = "col-md-9 col-12 mx-auto" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="row">
        <label class="col-3 col-form-label text-left">Уровень</label>
        <div class="col-9">
            @Html.TextBoxFor(x => x.Level, new { type = "number", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <label class="col-3 col-form-label text-left">Ранги</label>
        <div class="col-9">
            @Html.TextBoxFor(x => x.Max, new { type = "number", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <label class="col-3 col-form-label text-left">Название</label>
        <div class="col-9">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div><div class="row">
        <label class="col-3 col-form-label text-left">Эффект</label>
        <div class="col-9">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
    </div><div class="row">
        <label class="col-3 col-form-label text-left">Класс</label>
        <div class="col-9">
            @Html.DropDownListFor(x => x.BranchId, branches.GetSelectList(), new { @class = "form-select" })
        </div>
    </div>

    <hr id="hr" />
    <button type="submit" class="btn btn-success">Сохранить</button>
}