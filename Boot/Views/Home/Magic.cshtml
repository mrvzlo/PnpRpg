@using Boot.Enums
@using Boot.Helpers
@using Boot.Models
@{
    var count = EnumExtensions.GetEnumCount(typeof(StatType));
    ViewBag.Title = "Magic schools";
    for (var i = 0; i < count; i++)
    {
        var a = (StatType)i;
        <div class="col-md-2 col-sm-3 col-6 my-2">
            <a class="btn btn-@a.Color() btn-block" data-toggle="tab" href="#@a.Description()">@a.Translation()</a>
        </div>
    }
}
<div class="tab-content col-12">
    @for (var i = 0; i < count; i++)
    {
        var a = (StatType)i;
        <div class="tab-pane fade" id="@a.Description()">@Html.Partial("_MagicSchools", new MagicSchoolPageModel(a))</div>
    }
</div>