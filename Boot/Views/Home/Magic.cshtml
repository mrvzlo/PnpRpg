@using Boot.Enums
@using Boot.Helpers
@using Boot.Models
@{
    var path = Server.MapPath($"~/App_Data/{Constants.MagicSchoolsFileName}");
    var count = EnumExtensions.GetEnumCount(typeof(StatType));
    ViewBag.Title = "Magic schools";
}
<div class="nav nav-tabs col-12">
    @for (var i = 0; i < count; i++)
    {
        var a = (StatType)i;
        <a class="btn btn-@a.Color() mx-1" data-toggle="tab" href="#@a.Description()">@a.Translation()</a>
    }
</div>
<div class="tab-content col-12">
    @for (var i = 0; i < count; i++)
    {
        var a = (StatType)i;
        <div class="tab-pane fade" id="@a.Description()">@Html.Partial("_MagicSchools", new MagicSchoolPageModel(a, path))</div>
    }
</div>

@section scripts{
    <script>$(function () { MainJs.init(); });</script>
}
