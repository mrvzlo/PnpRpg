@using Boot.Enums
@using Boot.Helpers
@model Boot.Models.RacePickModel
@{
    var selectList = Model.Races.Select(x => new SelectListItem {Text = x.name, Value = x.id.ToString()});
}

<h4 class="col-12">Выберите расу</h4>

@for (var i = 0; i < Model.Stats.Length; i++)
{
    var a = (StatType)i;
    <div class="col-md-3 col-6">
        <div class="row border">
            <div class="col bg-@a.Color() py-2 px-sm-4">
                @a.Translation()
            <span class="font-weight-bold">@Model.Stats[i]</span>
        </div>
    </div>
</div>
}
@using (Ajax.BeginForm("PickRace", "HeroGen", null, 
    new AjaxOptions{ HttpMethod = "POST", UpdateTargetId = "main", OnBegin = "MainJs.toggleLoading", OnSuccess = "MainJs.toggleLoading" }, 
    new{}))
{

    @Html.DropDownList("id", selectList, new{@class = "form-control my-2"})
    <button type="submit" class="btn btn-success">Ок</button>
}