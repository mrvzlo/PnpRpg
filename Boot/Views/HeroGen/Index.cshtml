@using Boot.Enums
@using Boot.Models
@model HeroModel
@{
    ViewBag.Title = "Генератор персонажа";
    var status = (Status)ViewBag.Status;
    switch (status)
    {
        case Status.Chaos: Html.RenderPartial("_Chaos"); break;
        case Status.Stats: Html.RenderPartial("_StatEdit", Model); break;
        case Status.Skills: Html.RenderPartial("_SkillEdit", Model); break;
    }
}

@section scripts{
    <script>$(function () { MainJs.init(); });</script>
}
