@{
    ViewBag.Title = "Authorization";
}

<div class="col-md-8 col-12">
    <div class="nav btn-group row justify-content-center text-center font-weight-bold my-3">
        <button class="btn btn-outline-primary col-md-5 col-lg-4 col-6 active" id="signIn" href="#_SignIn" data-toggle="tab">
            Войти
        </button>
        <button class="btn btn-outline-primary col-md-5 col-lg-4 col-6" id="signUp" href="#_SignUp" data-toggle="tab">
            Зарегистрироваться
        </button>
    </div>
    <div class="tab-content">
        <div id="_SignIn" class="tab-pane show active" role="tabpanel">
            @{Html.RenderAction("SignIn", new {RequestUrl = (string) ViewBag.RequestUrl});}
        </div>
        <div id="_SignUp" class="tab-pane" role="tabpanel">
            @{Html.RenderAction("SignUp", new {RequestUrl = (string) ViewBag.RequestUrl});}
        </div>
    </div>
</div>