@{
    ViewBag.Title = "Authorization";
}

<div class="col-md-8 col-12">
    <div class="nav btn-group row justify-content-center text-center font-weight-bold my-3">
            <button class="btn btn-outline-primary col-md-4 col active" id="signIn" href="#_SignIn" data-toggle="tab">Sign in</button>
            <button class="btn btn-outline-primary col-md-4 col" id="signUp" href="#_SignUp" data-toggle="tab">Sign up</button>
    </div>
    <div class="tab-content">
        <div id="_SignIn" class="tab-pane show active" role="tabpanel">@{Html.RenderAction("SignIn", new { RequestUrl = (string)ViewBag.RequestUrl });}</div>
        <div id="_SignUp" class="tab-pane" role="tabpanel">@{Html.RenderAction("SignUp");}</div>
    </div>
</div>